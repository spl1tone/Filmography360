@page
@using db = Filmography360.DataBase.DbContextController.MainDbContext;
@{
    var _db = new db();
    int? actorId = ViewBag.ActorId;
    var actor = _db.Actors.FirstOrDefault(a => a.Id == actorId);
    var filmId = _db.FilmInfos.FirstOrDefault(f => f.Id == actor.FilmInfoId).Id;
}

<!Doctype html>
<html lang="en">
<head>
    <title>FilmInfo360</title>
    <meta charset="UTF-8">
    <meta name="description" content="Actor List">
    <link id="theme-link" rel="stylesheet" type="text/css" href="/css/indexDarkStyle.css">
    <link id="theme-link1" rel="stylesheet" type="text/css" href="/css/actorInfoStyleDark.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>

<body>
    <div class="header">
        <div class="headerImg">
            <img class="logoImg" src="/res/pictures/logo.png" width="34" height="34">
        </div>
        <div class="headerText">
            <p id="headTextPart1">FilmInfo <span id="headTextPart2">360</span></p>
        </div>
        <div class="dropdown-navigation">
            <p id="navigationText">Navigation</p>
            <div class="dropdown-content">
                <a href="/Home/indexDark" id="dropdonwText">Main Page</a>
                <p></p>
                <a href="/Home/aboutMeDark" id="dropdonwText">About Me</a>
            </div>
        </div>


        <div class="search-container">
            <input type="text" id="search-input" placeholder="Search...">
        </div>

        <div class="themeClass">
            <img class="themeImg" src="/res/pictures/themeIcon.png">
            <a href="/Home/actorInfoDark/@actor.Id" id="themeText">Theme</a>
        </div>

        <div class="account">
            <p id="accountNameText">Account</p>
        </div>
    </div>


    <div class="actor-container">
        <p class="actor-name">@actor.FullName</p>
        <div class="actor-info">
            <img class="actor-image" src="@actor.PictureUrl" width="300" height="555">
            <div class="actor-details">
                <button class="biography-button">Biography</button>
                <p class="actor-biography hidden">
                    @actor.Biography
                </p>
                <div class="actor-texts">
                    <p class="actor-text">FilmStarredIn: <a class="film-link" href="/Home/filmInfoDark/@filmId">@actor.FilmStarredIn</a></p>
                    <p class="actor-text">Full Name: <span class="spanClass">@actor.FullName</span></p>
                    <p class="actor-text">Date Of Birth: <span class="spanClass">@actor.DateOfBirth</span></p>
                    <p class="actor-text">Age: <span class="spanClass">@actor.Age</span></p>
                    <p class="actor-text">Height: <span class="spanClass">@actor.Height</span></p>
                    <p class="actor-text">Carrer: <span class="spanClass">@actor.Career</span></p>
                    <p class="actor-text">Role: <span class="spanClass">@actor.Role</span></p>
                </div>

            </div>
        </div>
    </div>

        <script src="/js/actorInfoScript.js"></script>
</body>
</html>