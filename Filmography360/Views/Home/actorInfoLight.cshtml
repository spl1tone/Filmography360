@page
@model Filmography360.Views.Home.actorInfoLightModel
@{
}

<!Doctype html>
<html lang="en">
<head>
    <title>FilmInfo360</title>
    <meta charset="UTF-8">
    <meta name="description" content="Actor List">
    <link rel="stylesheet" type="text/css" href="~/css/indexLightStyle.css">
    <link rel="stylesheet" type="text/css" href="~/css/actorInfoStyleLight.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>

<body>
    <div class="header">
        <div class="headerImg">
            <img class="logoImg" src="res/pictures/logo.png" width="34px" height="34px">
        </div>
        <div class="headerText">
            <p id="headTextPart1">FilmInfo <span id="headTextPart2">360</span></p>
        </div>
        <div class="dropdown-navigation">
            <p id="navigationText">Navigation</p>
            <div class="dropdown-content">
                <a href="indexLight.html" id="dropdonwText">Main Page</a>
                <p></p>
                <a href="aboutMeLight.html" id="dropdonwText">About Me</a>
            </div>
        </div>


        <div class="search-container">
            <input type="text" id="search-input" placeholder="Search...">
        </div>

        <div class="themeClass">
            <img class="themeImg" src="res/pictures/themeIcon.png">
            <a href="actorInfoDark.html" id="themeText">Theme</a>
        </div>

        <div class="account">
            <p id="accountNameText">Test Account</p>
        </div>
    </div>


    <div class="actor-container">
        <h1 class="actor-name">Actor Name</h1>
        <div class="actor-info">
            <img class="actor-image" src="res/pictures/myAvatar.jpg">
            <div class="actor-details">
                <button class="biography-button">Biography</button>
                <p class="actor-biography hidden">
                    Actor Biography
                </p>
                <div class="actor-texts">
                    <p class="actor-text">FilmStarredIn: <a class="film-link" href="filmInfoLight.html">Film Name</a></p>
                    <p class="actor-text">Full Name: <span class="spanClass">Actor Name</span></p>
                    <p class="actor-text">Date Of Birth: <span class="spanClass">01.01.2000</span></p>
                    <p class="actor-text">Age: <span class="spanClass">18</span></p>
                    <p class="actor-text">Height: <span class="spanClass">185 cm</span></p>
                    <p class="actor-text">Carrer: <span class="spanClass">Director</span></p>
                    <p class="actor-text">Role: <span class="spanClass">Actor</span></p>
                </div>

            </div>
        </div>
    </div>

    <script src="~/js/actorInfoScript.js"></script>
    <script src="~/js/indexScript.js"></script>
</body>
</html>