@{
    var film = Filmography360.FakerInfo.FakerInfo.FilmList.FirstOrDefault(f => f.Id == ViewBag.Id);
    var actorList = Filmography360.FakerInfo.FakerInfo.ActorList.FindAll(a => a.FilmStarredIn == film.Name);
